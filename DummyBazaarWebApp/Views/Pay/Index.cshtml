@model DummyBazaarWebApp.Models.Product
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div>
    <h2 class="productName"> Alışveriş Tamamla </h2>
</div>
<div class="PayBase">
    <div class="leftBase">
        <div class="paybox">
            <img src="~/Assets/ProductImage/@Model.IconPath" />
            <label class="productName">@Model.Name</label>
            <span class="productPrice">@Model.Price ₺</span>
        </div>
        <div class="paybox">
            <label style="float: left; margin-top: 18px;">Hesaplanan Tutar</label>
            <span class="productPrice">@Model.Price ₺</span>
            <div class="fixer"></div>
            <p style="margin-top:25px;margin-bottom:35px;">
                Bu satın alma işlemi için kart bilgilerinizi girip güvenli ödeme gerçekleştirin
            </p>
        </div>
        <div class="paybox">
            @using (Html.BeginForm("DoPay", "Pay", FormMethod.Post))
            {
                if (TempData["mesaj"] != null)
                {
                    <div style="clear:both; padding:10px; margin:5px; background-color:#fca3a3; border-radius:10px; text-align:center; color:#830606">
                        <label>@TempData["mesaj"]</label>
                    </div>


                }
                if (TempData["success"] != null)
                {
                    <div style="clear:both; padding:10px; margin:5px; background-color:#a3f895; border-radius:10px; text-align:center; color:#186007">
                        <label>@TempData["success"]</label>
                    </div>


                }
                <div class="left">
                    <div class="row">
                        Kart Sahibi Adı<br />
                        <input type="text" name="Name" class="forminput" style="width:250px;" placeholder="Adınız" />
                    </div>
                    <div class="row">
                        Kart Numarası<br />
                        <input type="text" name="cartNumber" class="forminput" style="width:250px;" placeholder="XXXX XXXX XXXX XXXX" />
                    </div>
                </div>
                <div class="right">
                    <div class="row">
                        Kart Sahibi Soyadı<br />
                        <input type="text" name="Surname" class="forminput" style="width:250px;" placeholder="Soyadınız" />
                    </div>
                    <div class="row">
                        Son Kullanma Tarihi<br />
                        <select name="ReqMon" class="forminput">
                            <option>01</option>
                            <option>02</option>
                            <option>03</option>
                            <option>04</option>
                            <option>05</option>
                            <option>06</option>
                            <option>07</option>
                            <option>08</option>
                            <option>09</option>
                            <option>10</option>
                            <option>11</option>
                            <option>12</option>
                        </select>
                        <select name="ReqYear" class="forminput">
                            <option>23</option>
                            <option>24</option>
                            <option>25</option>
                            <option>26</option>
                            <option>27</option>
                            <option>28</option>
                            <option>29</option>
                            <option>30</option>
                        </select>
                        <input type="text" name="cvc" class="forminput" style="margin-left:65px; width:80px" placeholder="CVC" />
                    </div>
                    <div class="row">
                        <input type="submit" class="payButton" value="Ödeme Yap" />
                    </div>
                </div>
            }

            <div class="fixer"></div>
            <div style="color:white">
                Ödeme Koşullarını Kullanıcı sözleşmesini uzak mesafeli satış sözleşmesini okudum öğrendim valla bak hepsini biliyorum.
            </div>
        </div>
    </div>
    <div class="rightBase">
        <div class="paybox" style="height:300px">
            <img src="~/Assets/PageImages/paypay.png" style="width:100%" />
        </div>
    </div>
    <div class="fixer"></div>
</div>




